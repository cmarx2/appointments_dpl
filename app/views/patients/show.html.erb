<h1><%= @patient.patient_name %></h1>

<%=link_to 'Edit Patient', edit_patient_path(@patient)%>
<%=link_to 'Delete Patient', @patient, method: :delete%>

<h2>Appointments</h2>
<%= link_to 'Make an Appointment', new_patient_appointment_path(@patient)%><br />
<% @patient.appointments.each do |appointment|%>
  <%= link_to appointment.date, patient_appointment_path(@patient, appointment) %>
  <%= link_to "Edit Appointment", edit_patient_appointment_path(@patient, appointment) %>
  <%= link_to "Delete Appointment", patient_appointment_path(@patient, appointment), method: :delete %>
<br />
<% end %>